<% unless @seller.nil? %>
<% content_for :header do %>
<div class='subnav'>
  <ul class='nav nav-pills'>
    <% case %>
    <% when @category %>
      <li><%= link_to @seller.seller_nick, url( :sellers, :show, seller_id: @seller._id ) %></li>
      <% if @category.parent %>
        <li><%= link_to @category.parent.cat_name, url( :sellers, :show, seller_id: @seller._id, category_id: @category.parent.cat_id ) %></li>
      <% end %>
      <li class='active'><a><%= @category.cat_name %></a></li>
    <% when @campaign %>
      <li><%= link_to @seller.seller_nick, url( :sellers, :show, seller_id: @seller._id ) %></li>
      <li class='active'><a><%= @campaign.name %></a></li>
      <% unless @campaign.plan.nil? %>
        <% @campaign.plan.each do |plan| %>
          <li><a><%= plan %></a></li>
        <% end %>
      <% end %>
    <% else %>
      <li class='active'><a><%= @seller.seller_nick %></a></li>
    <% end %>
  </ul> 
  </div>   
<% end %>
  <table id='items' class='table table-bordered table-striped table-hover fixed'>
    <thead>
      <% if @items.total_count > @page_size %>
        <tr>
          <td style="text-align:right;" colspan='16'>
           第 <%= @items.offset_value + 1 %> - <%= @items.offset_value + @page_size %>，共 <%= @items.total_count %>
          </td>
        </tr>
      <% end %>
      <tr>
        <th>宝贝ID</th>
        <th>商家编码</th>
        <th>吊牌价</th>
        <th>售价</th>
        <th>快递</th>
        <th>活动</th>
        <th>活动售价</th>
        <th>活动折扣</th>
        <th><%= @campaign ? @campaign.name : '大促' %></th>
        <th>月销量</th>
        <th>总销量</th>
        <th>剩余库存</th>
        <th>收藏数</th>
        <th>SKU数</th>
        <th>标题</th>
        <th>分类</th>
      </tr>
    <thead>
    <% unless @items.empty? %>  
      <tbody>
      <% @items.each do |item| %>
          <tr>
            <td><%= item.num_iid %></td>
            <td><%= item.outer_id %></td>
            <td><%= item.tag_price %></td>
            <td><%= item.price %></td>
            <td><%= "<span class='label label-warning'>包邮</span>" if item.post_fee %></td>
            <% if item.prom_type %>
              <td><%= item.prom_type %></td>
              <td><%= item.prom_price %></td>
              <td><%= item.prom_discount %>%</td>
            <% else %>
              <td colspan='3'> &nbsp; </td>
            <% end %>
            <td>
              <% if @campaign %>

                <% if @campaign.discount < 100 %>
                  <%= (item.tag_price*(@campaign.discount/100.to_f)).round(2) %>
                <% else %>
                  近30天最低
                <% end %>
              <% else %>
                <% if item.campaigns.campaigning.exists? %>
                  <ul class='nav nav-list'>
                  <% item.campaigns.campaigning.each do |campaign| %>
                    <li><%= link_to campaign.name, url(:sellers, :show, seller_id: @seller._id, campaign_id: campaign._id) %></li>
                  <% end %>
                  </ul>
                <% end %>
              <% end %>
            </td>
            <td title='月销量'><%= item.month_num %></td>
            <td title='总销量'><%= item.total_num %></td>
            <td title='剩余库存'><%= item.quantity %></td>
            <td title='收藏数'><%= item.favs_count %></td>
            <td title='SKU数'><%= item.skus_count %></td>
            <td><%= link_to item.title, item.item_url %></td>
            <td>
              <% if item.categories.exists? %>
                <ul class='nav nav-list'>
                  <% item.categories.each do |category| %>
                    <% if @category &&  category._id == @category._id %>
                      <li id='<%= category.cat_id %>' class='active' ><%= category.cat_name %></li>
                    <% else %>
                      <li id='<%= category.cat_id %>'><%= link_to category.cat_name, url( :sellers, :show, seller_id: @seller._id, category_id: category.cat_id ) %></li>
                    <% end %>
                  <% end %>
                </ul>
              <% end %>
            </td>
          </tr>
          <% unless item.timelines.nil? %>
            <% item.timelines.each do |timeline| %>
              <tr class='success'>
                <td><%= timeline.synced_at.to_date %></td>
                <td><%= timeline.outer_id %></td>
                <td> &nbsp; </td>
                <td><%= timeline.increment.price %></td>
                <td><%= "<span class='label label-warning'>包邮</span>" if timeline.post_fee %></td>
                <% if timeline.prom_type %>
                  <td><%= timeline.prom_type %></td>
                  <td><%= timeline.increment.prom_price %></td>
                  <td><%= timeline.increment.prom_discount %>%</td>
                <% else %>
                  <td colspan='3'> &nbsp; </td>
                <% end %>
                <td> &nbsp; </td>
                <td title='月销量'><%= timeline.increment.month_num %></td>
                <td title='总销量'><%= timeline.increment.total_num %></td>
                <td title='剩余库存'><%= timeline.increment.quantity %></td>
                <td title='收藏数'><%= timeline.increment.favs_count %></td>
                <td title='SKU数'><%= timeline.increment.skus_count %></td>
                <td><%= timeline.title %></td>
                <td> &nbsp; </td>
              </tr>
            <% end %>
          <% end %>
        <% end %>
      </tbody>
    <% else %>
      <tr>
        <td colspan='16'>没货品～～</td>
      </tr>
    <% end %>
  </table>
  <%= paginate @items, theme: 'twitter_bootstrap', window: 4 %>
<% end %>